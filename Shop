from app import db

admin = Blueprint('admin', __name__)

@admin.route('/admin/dashboard')
@login_required
@admin_required
def dashboard():
    """
    Ø¯Ø§Ø´Ø¨ÙˆØ±Ø¯ Ø§ØµÙ„ÛŒ Ù…Ø¯ÛŒØ±ÛŒØª
    Ù†Ù…Ø§ÛŒØ´ Ø¢Ù…Ø§Ø± Ú©Ù„ÛŒ Ùˆ Ù†Ù…ÙˆØ¯Ø§Ø±Ù‡Ø§
