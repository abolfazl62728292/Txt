```python name=app/models/order.py
from datetime import datetime
from app import db

class Order(db.Model):
    """
    Ù…Ø¯Ù„ Ø³ÙØ§Ø±Ø´
    Ø´Ø§Ù…Ù„ Ø§Ø·Ù„Ø§Ø¹Ø§Øª Ú©Ø§Ù…Ù„ Ø³ÙØ§Ø±Ø´ Ùˆ ÙˆØ¶Ø¹ÛŒØª Ø¢Ù†
    """
    id = db.Column(db.Integer, primary_key=True)
    user_id = db.Column(db.Integer, db.ForeignKey('user.id'), nullable=False)
    status = db.Column(db.String(20), default='pending')  # pending, paid, shipped, delivered, cancelled
    total_price = db.Column(db.Float, nullable=False)
    address = db.Column(db.Text, nullable=False)
    phone = db.Column(db.String(15), nullable=False)
    tracking_code = db.Column(db.String(20), unique=True)
    created_at = db.Column(db.DateTime, default=datetime.utcnow)
    updated_at = db.Column(db.DateTime, default=datetime.utcnow, onupdate=datetime.utcnow)
    items = db.relationship('OrderItem', backref='order', lazy=True)
    status_changes = db.relationship('OrderStatusLog', backref='order', lazy=True)

    def update_status(self, new_status, note=None):
        """
        Ø¨Ø±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ ÙˆØ¶Ø¹ÛŒØª Ø³ÙØ§Ø±Ø´
        Ø¨Ø§ Ø«Ø¨Øª Ø¯Ø± ØªØ§Ø±ÛŒØ®Ú†Ù‡ ØªØºÛŒÛŒØ±Ø§Øª
        """
        if new_status != self.status:
            self.status = new_status
            log = OrderStatusLog(
                order_id=self.id,
                old_status=self.status,
                new_status=new_status,
                note=note
            )
            db.session.add(log)
            db.session.commit()

class OrderItem(db.Model):
    """
    Ù…Ø¯Ù„ Ø¢ÛŒØªÙ…â€ŒÙ‡Ø§ÛŒ Ø³ÙØ§Ø±Ø´
    Ù‚ÛŒÙ…Øª Ù‡Ø± Ø¢ÛŒØªÙ… Ø¯Ø± Ø²Ù…Ø§Ù† Ø®Ø±ÛŒØ¯ Ø°Ø®ÛŒØ±Ù‡ Ù…ÛŒØ´Ù‡
