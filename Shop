@orders.route('/api/orders/create', methods=['POST'])
@login_required
def create_order():
    """
    Ø§ÛŒØ¬Ø§Ø¯ Ø³ÙØ§Ø±Ø´ Ø§Ø² Ø±ÙˆÛŒ Ø³Ø¨Ø¯ Ø®Ø±ÛŒØ¯
