        'total_products': Product.query.count(),
        'low_stock_products': Product.query.filter(Product.stock < 10).count(),
        'total_users': User.query.filter_by(role='customer').count()
    }
    
    # Ø¢Ù…Ø§Ø± ÙØ±ÙˆØ´
