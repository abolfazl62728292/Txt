    is_purchased = db.Column(db.Boolean, default=False)  # Ø¢ÛŒØ§ Ù…Ø­ØµÙˆÙ„ Ø®Ø±ÛŒØ¯Ø§Ø±ÛŒ Ø´Ø¯Ù‡
    reports_count = db.Column(db.Integer, default=0)  # ØªØ¹Ø¯Ø§Ø¯ Ú¯Ø²Ø§Ø±Ø´â€ŒÙ‡Ø§ÛŒ Ù†Ø§Ù…Ù†Ø§Ø³Ø¨ Ø¨ÙˆØ¯Ù†
    created_at = db.Column(db.DateTime, default=datetime.utcnow)
    updated_at = db.Column(db.DateTime, default=datetime.utcnow, onupdate=datetime.utcnow)
    
