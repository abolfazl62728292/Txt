    user = db.relationship('User', backref='reviews')
    product = db.relationship('Product', backref='reviews')
    replies = db.relationship('ReviewReply', backref='review', lazy=True)
    
    def to_dict(self):
        """
        ØªØ¨Ø¯ÛŒÙ„ Ù†Ø¸Ø± Ø¨Ù‡ Ø¯ÛŒÚ©Ø´Ù†Ø±ÛŒ Ø¨Ø±Ø§ÛŒ API
        """
