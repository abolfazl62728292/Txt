```python name=app/reviews/routes.py
from flask import Blueprint, jsonify, request
from flask_login import current_user, login_required
from app.models.review import Review, ReviewReply, ReportedReview
from app.models.order import Order
from app.utils.decorators import admin_required
from app import db
import bleach  # Ø¨Ø±Ø§ÛŒ Ù¾Ø§Ú©Ø³Ø§Ø²ÛŒ HTML Ø§Ø² Ù†Ø¸Ø±Ø§Øª

reviews = Blueprint('reviews', __name__)

@reviews.route('/api/products/<int:product_id>/reviews', methods=['POST'])
@login_required
def add_review(product_id):
    """
    Ø§ÙØ²ÙˆØ¯Ù† Ù†Ø¸Ø± Ø¬Ø¯ÛŒØ¯
    Ø¨Ø§ Ø¨Ø±Ø±Ø³ÛŒ Ø®Ø±ÛŒØ¯ Ù…Ø­ØµÙˆÙ„ Ùˆ Ù¾Ø§Ú©Ø³Ø§Ø²ÛŒ Ù…Ø­ØªÙˆØ§
    """
    # Ø¨Ø±Ø±Ø³ÛŒ Ø®Ø±ÛŒØ¯ Ù…Ø­ØµÙˆÙ„
    has_purchased = Order.query.join(OrderItem)\
        .filter(Order.user_id == current_user.id,
                OrderItem.product_id == product_id,
                Order.status == 'delivered')\
        .first() is not None
    
    data = request.get_json()
    
    # Ù¾Ø§Ú©Ø³Ø§Ø²ÛŒ Ù…Ø­ØªÙˆØ§
    clean_comment = bleach.clean(data.get('comment', ''), tags=[])
    clean_pros = bleach.clean(data.get('pros', ''), tags=[])
    clean_cons = bleach.clean(data.get('cons', ''), tags=[])
    
    review = Review(
        user_id=current_user.id,
        product_id=product_id,
        rating=data['rating'],
        comment=clean_comment,
        pros=clean_pros,
        cons=clean_cons,
        is_purchased=has_purchased
    )
    
    db.session.add(review)
    db.session.commit()
    
    return jsonify(review.to_dict()), 201

@reviews.route('/api/reviews/<int:review_id>/reply', methods=['POST'])
@login_required
@admin_required
def reply_to_review(review_id):
    """
    Ù¾Ø§Ø³Ø® Ø¨Ù‡ Ù†Ø¸Ø± ØªÙˆØ³Ø· Ø§Ø¯Ù…ÛŒÙ†
    """
    review = Review.query.get_or_404(review_id)
    data = request.get_json()
    
    reply = ReviewReply(
        review_id=review_id,
        user_id=current_user.id,
        content=bleach.clean(data['content'], tags=[])
    )
    
    db.session.add(reply)
    db.session.commit()
    
    return jsonify(reply.to_dict()), 201

@reviews.route('/api/reviews/<int:review_id>/report', methods=['POST'])
@login_required
def report_review(review_id):
    """
    Ú¯Ø²Ø§Ø±Ø´ Ù†Ø¸Ø± Ù†Ø§Ù…Ù†Ø§Ø³Ø¨
    """
    review = Review.query.get_or_404(review_id)
    data = request.get_json()
    
    # Ø¨Ø±Ø±Ø³ÛŒ Ú¯Ø²Ø§Ø±Ø´ ØªÚ©Ø±Ø§Ø±ÛŒ
    existing_report = ReportedReview.query.filter_by(
        review_id=review_id,
        reporter_id=current_user.id
    ).first()
    
    if existing_report:
        return jsonify({'error': 'Ø´Ù…Ø§ Ù‚Ø¨Ù„Ø§Ù‹ Ø§ÛŒÙ† Ù†Ø¸Ø± Ø±Ø§ Ú¯Ø²Ø§Ø±Ø´ Ú©Ø±Ø¯Ù‡â€ŒØ§ÛŒØ¯'}), 400
    
    report = ReportedReview(
        review_id=review_id,
        reporter_id=current_user.id,
        reason=data['reason'],
        details=data.get('details')
    )
    
    review.reports_count += 1
    db.session.add(report)
    db.session.commit()
    
    # Ø§Ú¯Ø± ØªØ¹Ø¯Ø§Ø¯ Ú¯Ø²Ø§Ø±Ø´â€ŒÙ‡Ø§ Ø§Ø² Ø­Ø¯ Ù…Ø¬Ø§Ø² Ø¨ÛŒØ´ØªØ± Ø´Ø¯
    if review.reports_count >= 5:
        review.is_verified = False
        db.session.commit()
    
    return jsonify({'message': 'Ú¯Ø²Ø§Ø±Ø´ Ø´Ù…Ø§ Ø«Ø¨Øª Ø´Ø¯'}), 201

@reviews.route('/api/admin/reviews/pending')
@login_required
@admin_required
def get_pending_reviews():
    """
    Ø¯Ø±ÛŒØ§ÙØª Ù†Ø¸Ø±Ø§Øª Ø¯Ø± Ø§Ù†ØªØ¸Ø§Ø± ØªØ£ÛŒÛŒØ¯
    """
    reviews = Review.query.filter_by(is_verified=False)\
        .order_by(Review.reports_count.desc(),
                 Review.created_at.desc())\
        .all()
    
    return jsonify([review.to_dict() for review in reviews])

@reviews.route('/api/admin/reviews/<int:review_id>/verify', methods=['POST'])
@login_required
@admin_required
def verify_review(review_id):
    """
    ØªØ£ÛŒÛŒØ¯ Ù†Ø¸Ø± ØªÙˆØ³Ø· Ø§Ø¯Ù…ÛŒÙ†
    """
    review = Review.query.get_or_404(review_id)
    review.is_verified = True
    review.reports_count = 0  # Ø±ÛŒØ³Øª Ú©Ø±Ø¯Ù† Ú¯Ø²Ø§Ø±Ø´â€ŒÙ‡Ø§
    db.session.commit()
    
    return jsonify({'message': 'Ù†Ø¸Ø± ØªØ£ÛŒÛŒØ¯ Ø´Ø¯'})
