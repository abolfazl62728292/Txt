        elif operation == 'subtract':
            if self.stock >= quantity:
                self.stock -= quantity
            else:
                raise ValueError('Ù…ÙˆØ¬ÙˆØ¯ÛŒ Ú©Ø§ÙÛŒ Ù†ÛŒØ³Øª')
