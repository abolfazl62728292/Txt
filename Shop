    product_id = db.Column(db.Integer, db.ForeignKey('product.id'), nullable=False)
    order_id = db.Column(db.Integer, db.ForeignKey('order.id'))  # Ø¨Ø±Ø§ÛŒ ØªØ£ÛŒÛŒØ¯ Ø®Ø±ÛŒØ¯
    rating = db.Column(db.Integer, nullable=False)  # 1 ØªØ§ 5
